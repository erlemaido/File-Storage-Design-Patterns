@model WebApp.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detailid</h1>

<div>
    <h4>Toode</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price) â‚¬
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductStateType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductStateType.Title)
        </dd>
        <dt>
            @{
                var pictures = Model.PictureBytes;
                @foreach (var picture in pictures)
                {
                    <img src="@GetImage(picture)" height="300" width="300" asp-append-version="true" alt=""/>
                }
            }
        </dt>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductId">Muuda</a> |
    <a asp-action="Delete" asp-route-id="@Model.ProductId">Kustuta</a> |
    <a asp-action="Index">Tagasi</a>
</div>

@{
    static string GetImage(byte[] list)
    {
        var base64 = Convert.ToBase64String(list);
        var imgSrc = "data:image;base64," + base64;
        return imgSrc;
    }
}